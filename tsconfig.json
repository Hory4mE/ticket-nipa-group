{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2019",
        "lib": ["ES2017", "ES2015", "ES6"],
        "importHelpers": true,
        "removeComments": true,
        "noImplicitAny": true,
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": false,
        "baseUrl": ".",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "isolatedModules": false,
        "skipLibCheck": true,
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "allowUnreachableCode": false,
        "esModuleInterop": true,
        "types": ["@types/node", "@types/mocha"],
        "typeRoots": ["./typings", "./node_modules", "./node_modules/@types"],
        "paths": {
            "@app/*": ["./src/*"]
        }
    },
    "include": ["src/**/*", "./knexfile.ts"],
    "exclude": ["./node_modules/**/*", "./dist/**/*"]
}
